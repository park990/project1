<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--시험-->
<mapper namespace="test_t"> <!--테이블 명 or 파일명-->

    <select id="all" resultType="pm.vo.TestVO" parameterType="Map">
        SELECT * FROM test_t
    </select>

    <select id="selectTest" resultType="pm.vo.TestVO" parameterType="Map">
        SELECT t.test_idx, t.test_name, t.test_ques_num, l.lec_no
        FROM test_t t INNER JOIN lec_t l
        ON t.lec_no = l.lec_no
        WHERE t.lec_no = #{lec_no}
    </select>
    <insert id="save" parameterType="pm.vo.TestVO" useGeneratedKeys="true" keyProperty="test_idx">
        INSERT INTO test_t(lec_no, test_name, test_ques_num)
        VALUES(#{lec_no},#{test_name},#{test_ques_num});
    </insert>
    <delete id="del_test" parameterType="String">
        DELETE FROM test_t
        WHERE test_idx = #{test_idx}
    </delete>

</mapper>