<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test_ques">
    <insert id="save" parameterType="pm.vo.test_quesVO" useGeneratedKeys="true" keyProperty="ques_idx">
        INSERT INTO test_ques_t(ques_num, ques_con, test_item_tnum,test_ques_pit,test_idx)
        VALUES(#{ques_num},#{ques_con},#{test_item_tnum}, #{test_ques_pit}, #{test_idx});
    </insert>
    <select id="exam_ques" resultType="pm.vo.test_quesVO" parameterType="String">
        SELECT * FROM test_ques_t
        WHERE test_idx = #{test_idx}
    </select>
    <update id="change_ques" parameterType="pm.vo.test_quesVO">
        UPDATE test_ques_t
        SET ques_con= #{ques_con}, test_ques_pit=#{test_ques_pit}, test_item_tnum=#{test_item_tnum}
        WHERE test_idx = #{test_idx} AND ques_num = #{ques_num}
    </update>

    <delete id="del_allques" parameterType="String">
        DELETE FROM test_ques_t
        WHERE test_idx = #{test_idx}
    </delete>
</mapper>